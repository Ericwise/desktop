NW_TARGET=@nw_target@

ifeq ($(OS),Windows_NT)
	LIB=turtl.lib
	DEF=-DWINDOWS
else
	LIB=turtl.so
endif

all: nw

node:
	node-gyp clean configure
	cp ../../core/src/$(LIB) ./build
	node-gyp build

nw:
	nw-gyp clean
	nw-gyp configure --target=$(NW_TARGET) -- $(DEF)
	cp ../../core/src/$(LIB) ./build
	nw-gyp build

clean:
	rm -rf build/

